{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "lib": ["dom", "ES2017"],
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.*"]
}
